.starter-template
  h1 Sandbox
  -if @current_user
    = link_to "New Booking", new_booking_path(:location => "sandbox"), class: "btn btn-blue"

  br
  br
  br
  .calendar_sandbox

javascript:
  var initialize_calendar;
    initialize_calendar = function() {
      $('.calendar_sandbox').fullCalendar({
          defaultView: 'agendaWeek',
          // eventSources: ['/rooms/sandbox.json','/rooms/sandbox_workstation1.json','/rooms/sandbox_workstation2.json','/rooms/sandbox_workstation3.json'],
          events: '/rooms/sandbox.json',
          height: '100',
          minTime: '8:00:00',
          maxTime: '23:00:00',
          slotDuration: '00:15:00',
          allDaySlot: false,
          selectable: false,
          selectHelper: true,
          eventLimit: true,
          firstDay: 1,
          nowIndicator: true,
          eventRender: function(event, element)
          {
              element.find('.fc-title').append("<br/>" + event.name + "<br/>" + event.username);
          },

          header: {
            left: 'prev,next today',
            center: 'title',
            right: 'agendaDay,agendaWeek,month'
          },

        });
    };
    $(document).on('turbolinks:load', initialize_calendar);
